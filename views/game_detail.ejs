<%- include("header") -%>
<div class="content">
  <div class="game-detail">
    <h1><%=game.name%></h1>
    <p>Released: <%=game.release_year%></p>
    <% if (!(JSON.stringify(game.image) === JSON.stringify({}))){ %>
      <img src="data:<%=game.image.fileType%>;base64, <%= game.base64 %>" />
    <%}%>
    <p>Console: <a href=<%=game.games_console.url%>><%=game.games_console.name%></a></p>
    <p class="description"><%=game.description%></p>
    <p>Price: <%=game.price_formatted%></p>
    <p>Copies in stock: <%=game.number_in_stock%></p>
  </div>
  <div class="buttons">
    <button class="delete" onclick="location.href='<%=game.url%>/delete'">Delete Game</button>
    <button class="update" onclick="location.href='<%=game.url%>/update'">Update Game</button>
  </div>
</div>
<%- include("footer") -%>